                    android:background="@drawable/edittextfieldforsalestracking"
                    android:textColor="#e1e1e1"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    /> <!--android:background="@drawable/edittextfieldback"-->

</LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leave Type:"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="#ffffff"/>

                <!-- Spinner Element -->
                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:prompt="@string/spinner_title"
                    android:entries="@array/leave_spinnerItems"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/backdropdownfieldblack"
                    android:layout_marginBottom="10dp"
                    android:drawSelectorOnTop="true"
                    android:textColor="#ffffff"
                    /> <!--android:background="@drawable/attendanceapprovaldropdownback"-->


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reason:"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="#ffffff"/>

                <EditText
                    android:id="@+id/attendancepagereasonEditTextID1"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edittextfieldforsalestracking"
                    android:drawablePadding="15dp"
                    android:gravity="start|center_vertical"
                    android:hint="Reason for LWP"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLength="50"
                    android:paddingLeft="10dp"
                    android:textColor="#e1e1e1"
                    android:textColorHint="#e1e1e1"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:theme="@style/MyEditTextTheme"
                    android:visibility="visible" /> <!--android:background="@drawable/edittextfieldback"-->

            </LinearLayout>


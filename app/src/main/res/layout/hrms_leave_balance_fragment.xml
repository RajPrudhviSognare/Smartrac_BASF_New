<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.5"
        android:paddingTop="30dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:text="PLAvailed  "
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/employeeinfoPageLeaveBalanceTextViewID"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight=".5"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:textStyle="normal"
            android:textSize="14sp"
            android:layout_gravity="left"
            android:gravity="left"
            android:textColor="#000000"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="0dp"
        android:background="#d3d5d7"
        android:alpha="0.8"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:visibility="visible"
        android:weightSum="1.5">

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:text="PLClosing  "
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/employeeinfoPageLeaveBalanceTextViewID1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight=".5"
            android:gravity="left"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="0dp"
        android:alpha="0.8"
        android:background="#d3d5d7"
        android:visibility="gone" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.5"
        android:paddingTop="30dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="gone">
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Sick Leave Balance:"
            android:layout_weight="1"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:textStyle="normal"
            android:textSize="15sp"
            android:layout_gravity="left"
            android:gravity="left"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/employeeinfoPageLeaveBalanceTextViewID2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight=".5"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:textStyle="normal"
            android:textSize="14sp"
            android:layout_gravity="left"
            android:gravity="left"
            android:textColor="#000000"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="0dp"
        android:alpha="0.8"
        android:background="#d3d5d7"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:visibility="gone"
        android:weightSum="1.5">

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:text="Optional Leave Balance:"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/employeeinfoPageLeaveBalanceTextViewID3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight=".5"
            android:gravity="left"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="0dp"
        android:alpha="0.8"
        android:background="#d3d5d7"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:visibility="gone"
        android:weightSum="1.5">

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:text="Birthday leave Balance:"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/employeeinfoPageLeaveBalanceTextViewID4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight=".5"
            android:gravity="left"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="0dp"
        android:alpha="0.8"
        android:background="#d3d5d7"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/paternitylayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:visibility="gone"
        android:weightSum="1.5">

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:text="Paternity leave Balance:"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/employeeinfoPageLeaveBalanceTextViewID5"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight=".5"
            android:gravity="left"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="0dp"
        android:alpha="0.8"
        android:background="#d3d5d7"
        android:visibility="gone" />

</LinearLayout>
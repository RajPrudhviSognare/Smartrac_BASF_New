<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="0dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingLeft="15dp">

        <CheckBox
            android:id="@+id/custom_approveattendance_AllLeaveTypes_checkBoxID"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:checked="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5">
            <TextView
                android:id="@+id/custom_approveattendance_AllLeaveTypes_NameTextViewID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textStyle="normal|bold"
                android:textSize="16sp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="10dp"
                android:textColor="#464646"
                android:layout_gravity="left"/>
            <TextView
                android:id="@+id/custom_approveattendance_AllLeaveTypes_IDTextViewID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textStyle="normal|bold"
                android:textSize="14sp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="2dp"
                android:textColor="#464646"
                android:layout_gravity="left"/> <!--android:textColor="#878787"-->
            <TextView
                android:id="@+id/custom_approveattendance_AllLeaveTypes_DateTextViewID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textStyle="normal|bold"
                android:textSize="16sp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="2dp"
                android:textColor="#464646"
                android:layout_gravity="left"/>
            <TextView
                android:id="@+id/custom_approveattendance_AllLeaveTypes_TypeTextViewID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textStyle="normal|bold"
                android:textSize="16sp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="2dp"
                android:textColor="#464646"
                android:layout_gravity="left"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/custom_approveattendance_AllLeaveTypes_ReasonTextViewID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reason"
                android:textStyle="normal|bold"
                android:textSize="16sp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="2dp"
                android:textColor="#464646"
                android:layout_gravity="left"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_weight="1.5">
            <Button
                android:id="@+id/approve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approve"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/colorPrimary"></Button>

            <Button
                android:id="@+id/reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/colorPrimary"></Button>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
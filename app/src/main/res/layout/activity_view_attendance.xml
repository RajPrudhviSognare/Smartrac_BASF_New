<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingTop="0dp"
    tools:context=".ViewAttendanceActivity">

    <LinearLayout
        android:id="@+id/listview_header_viewAttendance_table_LinearLayoutID"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#cccccc"
        android:weightSum="4"
        android:layout_margin="0dp"
        android:visibility="visible"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/listviewHeader_IndateTagTextViewID"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textStyle="normal|bold"
            android:textSize="13sp"
            android:textColor="#1a237e"
            android:gravity="center"
            android:paddingLeft="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <View
            android:id="@+id/customViewdistribute_assetID1000199991"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_marginBottom="0dp"
            android:background="#a1a1a1"
            android:alpha="0.8"
            />
        <TextView
            android:id="@+id/listviewHeader_InTimeTagTextViewID"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="In Time"
            android:textStyle="normal|bold"
            android:textSize="13sp"
            android:textColor="#1a237e"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <View
            android:id="@+id/customViewASSIGNID100019999091"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_marginBottom="0dp"
            android:background="#a1a1a1"
            android:alpha="0.8"
            />
        <TextView
            android:id="@+id/listviewHeader_OuttimeTagTextViewID"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Out Time"
            android:textStyle="normal|bold"
            android:textSize="13sp"
            android:textColor="#1a237e"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <View
            android:id="@+id/customViewASSIGNID100019999094"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_marginBottom="0dp"
            android:background="#a1a1a1"
            android:alpha="0.8"
            />
        <TextView
            android:id="@+id/listviewHeader_HoursWorkedTagTextViewID"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Hours Worked"
            android:textStyle="normal|bold"
            android:textSize="13sp"
            android:textColor="#1a237e"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>

    <ListView
        android:id="@+id/viewAttendanceDetailsListViewID"
        android:layout_below="@+id/listview_header_viewAttendance_table_LinearLayoutID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:divider="#a1a1a1"
        android:paddingTop="0dp"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:background="#ffffff"
        android:cacheColorHint="@android:color/transparent"
        android:padding="0dp"
        android:choiceMode="multipleChoice"
        android:layout_weight="4"/>
    <View
        android:id="@+id/customViewASSIGNID"
        android:layout_below="@+id/viewAttendanceDetailsListViewID"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="0dp"
        android:background="#a1a1a1"
        android:alpha="0.8"
        />
    <TextView
        android:id="@+id/viewAttendanceDetailsNoDataTextViewID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Record Found!"
        android:visibility="gone"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        android:layout_marginBottom="0dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="0dp"
        android:textColor="#ff0000"
        android:layout_gravity="center"
        android:gravity="center"/>

</RelativeLayout>

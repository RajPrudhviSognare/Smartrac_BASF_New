    <TextView
        android:id="@+id/custom_approveattendance_CommentsTextViewID"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Comment"
        android:textStyle="normal"
        android:textSize="14sp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:textColor="#464646"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"/>

    <View
        android:id="@+id/customViewInOutTimeID10001999919019"
        android:layout_width="1dp"
        android:layout_height="60dp"
        android:layout_marginBottom="0dp"
        android:background="#a1a1a1"
        android:alpha="0.8"
        />

    <EditText
        android:id="@+id/custom_approveattendance_CommentsTLEditTextID"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="2dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="2dp"
        android:textStyle="normal"
        android:inputType="text"
        android:background="#ffffff"
        android:hint="Write Comment"
        android:cursorVisible="true"
        android:lines="1"
        android:textSize="14sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1"/>

    <View
        android:id="@+id/customViewInOutTimeID100019999190199"
        android:layout_width="1dp"
        android:layout_height="60dp"
        android:layout_marginBottom="0dp"
        android:alpha="0.8"
        android:background="#a1a1a1"
        android:visibility="gone" />

    <TextView
        android:id="@+id/custom_approveattendance_DistanceTextViewID"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="2dp"
        android:text="Distance"
        android:textColor="#464646"
        android:textSize="14sp"
        android:textStyle="normal"
        android:visibility="gone" />

</LinearLayout>
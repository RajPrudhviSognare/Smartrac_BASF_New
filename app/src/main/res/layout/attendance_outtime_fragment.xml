<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollviewAttendance1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/attendancetabbedcolor"
    tools:context="com.experis.smartrac.b.AttendanceOuttimeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="50dp">

            <ImageView
                android:id="@+id/attendancePageTakePicturePlusIconImageViewID1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/takepicture_plusicon" />

            <TextView
                android:id="@+id/attendancePageTextViewID11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attendancePageTakePicturePlusIconImageViewID1"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Take a Picture"
                android:textColor="#a7b6c8"
                android:textSize="32sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/attendancePageTextViewID22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attendancePageTextViewID11"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Take a clear picture inside your work Place"
                android:textColor="#a7b6c8"
                android:textSize="16sp"
                android:textStyle="normal" />

            <RelativeLayout
                android:id="@+id/attendancePagePhotoPreviewAreaLayoutID1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attendancePageTextViewID22"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/attendancePagePhotoPreviewAreaImageViewID1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/photo_preview_area"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp" />
            </RelativeLayout>

            <EditText
                android:id="@+id/attendancePageReasonValueEditTextID1"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/attendancePagePhotoPreviewAreaLayoutID1"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edittextfieldforsalestracking"
                android:drawablePadding="15dp"
                android:gravity="start|center_vertical"
                android:hint="Write Comment..."
                android:inputType="text"
                android:lines="1"
                android:maxLength="50"
                android:paddingLeft="10dp"
                android:textColor="#e1e1e1"
                android:textColorHint="#dddddd"
                android:textSize="14sp"
                android:textStyle="normal"
                android:theme="@style/MyEditTextTheme"
                android:visibility="visible" />

            <!--<ImageView
                android:id="@+id/attendancePageSubmitImageViewID1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/submitbtn"
                android:layout_gravity="center"
                android:layout_below="@+id/attendancePagePhotoPreviewAreaImageViewID1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"/>-->


        </RelativeLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/attendancePageSubmitImageViewID1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/submitbtn"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnSubmitAttendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#4570A7"
        android:text="Punch Attendance"
        android:textColor="#FFF"
        android:visibility="visible" />
</RelativeLayout>